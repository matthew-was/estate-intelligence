{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "ask": [
      "Bash(chmod:*)",
      "Edit(.claude/settings.json)"
    ],
    "allow": [
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(ls:*)",
      "Bash(tail:*)",
      "Bash(git:*)",
      "Bash(markdownlint:*)",
      "Bash(python3:*)",
      "Edit(./*)",
      "Read(./*)",
      "Write(./*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint-markdown.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
